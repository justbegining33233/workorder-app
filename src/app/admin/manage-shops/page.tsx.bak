    const fetchShops = async () => {
      try {
        const token = localStorage.getItem('token');
        const res = await fetch('/api/admin/shops', {
          credentials: 'include',
          headers: {
            'Authorization': `Bearer ${token}`
          }
        });
        
        if (res.ok) {
          const data = await res.json();
          if (data.success) {
            // Map the status from 'approved' to 'active' for display
            const mappedShops = data.shops.map((shop: any) => ({
              ...shop,
              owner: shop.ownerName,
              status: shop.status === 'approved' ? 'active' : shop.status,
              joinedDate: new Date(shop.createdAt)
            }));
            setShops(mappedShops);
            setLiveMetrics(data.liveMetrics);
